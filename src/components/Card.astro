---
interface Props {
  text: string;
  title: string;
  icon?: string;
  textDark?: boolean;
  verticalLine?: boolean;
}

const {title, text, icon, textDark = false, verticalLine = false} = Astro.props;
---

<article class="card">
  {icon && <img class="icon" src={icon} alt="" loading="lazy">}
  <h3 class={verticalLine ? 'vertical-line' : ''}>{title}</h3>
  <p class={textDark ? 'secondary-text text-dark' : 'secondary-text'}>{text}</p>
  <slot name="button"/>
</article>

<style>
  .card {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }

  .card .icon {
    margin-block: 0 var(--spacing-sm);
    margin-inline: 0;
    block-size: 4.2rem;
  }

  .card h3 {
    margin: 0;
    width: 100%;
    font-family: var(--heading-font);
    font-size: var(--h6-size);
    font-weight: 500;
  }

  .text-dark {
    color: var(--text-dark);
  }

  .vertical-line {
    padding-inline-start: var(--spacing-sm);
    border-inline-start: 2px solid var(--blue-1);
    line-height: 28px;
  }
</style>
